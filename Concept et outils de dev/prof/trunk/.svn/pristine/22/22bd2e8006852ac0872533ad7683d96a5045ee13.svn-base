const char* traduire_bonjour(langue lng)
{
  switch (lng) {
  case anglais:
    return "Hello";
  case francais:
    return "Bonjour";
  case neerlandais:
    return "Hallo";
  case allemand:
    return "Guten Tag";
	case espagnol:
		return "hola";
	case suedois:
		return "hallå";
  case russe:
	  return "привет";
  case yoruba:
	  return " E ku aaro"
  default:
    return "?????";
  }
}

langue string_vers_langue(const char *const str)
{
  if (!strcmp(str,"anglais")) {
    return anglais;
  }
  if (!strcmp(str,"francais")) {
    return francais;
  }
  if (!strcmp(str,"neerlandais")) {
    return neerlandais;
  }
  if (!strcmp(str,"allemand")) {
    return allemand;
  }
  if (!strcmp(str,"espagnol")) {
    return espagnol;
  }
  if (!strcmp(str,"maori")) {
    return maori;
  }
  if (!strcmp(str,"suedois")) {
    return suedois;
  }
  if (!strcmp(str,"russe")) {
    return russe;
  }
  if (!strcmp(str,"yoruba")) {
    return yoruba;
  }
  return inconnu;
}
